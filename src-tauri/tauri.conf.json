{
  "$schema": "https://raw.githubusercontent.com/nicedoctor/tauri-releases/main/tauri-conf-v2-schema.json",
  "productName": "Peeky",
  "version": "0.1.0",
  "identifier": "com.peeky.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1440",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "overlay",
        "title": "Peeky Overlay",
        "url": "/index.html",
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visibleOnAllWorkspaces": true,
        "resizable": false,
        "visible": false,
        "skipTaskbar": true,
        "center": true,
        "width": 960,
        "height": 540
      },
      {
        "label": "main",
        "title": "Peeky",
        "url": "/main.html",
        "width": 900,
        "height": 680,
        "decorations": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:peeky.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
